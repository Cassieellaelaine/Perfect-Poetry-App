<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Let's create Poetry!</h3>

    <form class="form new-poem-form">
      <div class="form-group">
        <label for="poem-title">Poem title:</label>
        <input class="form-input" type="text" id="poem-title" name="poem-title" />
      </div>

      {{!--INSPO???--}}

      <div class="form-group">
        <label for="poem-body">Start here...</label>
        <textarea class="form-input" id="poem-body" name="poem-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 proem-list">
    <h3>Your poems:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
